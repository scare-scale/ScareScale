---
import Prose from "../../components/Prose.astro";
import MainLayout from "../../layouts/MainLayout.astro";
import { round } from "../../utils/scoreUtils";
import { SEO } from "astro-seo";
import { Image } from "astro:assets";
import { allMovies } from "../../content.config";

export async function getStaticPaths() {
  return allMovies.map((movie) => ({
    params: { slug: movie.slug },
    props: { movie },
  }));
}

const { movie } = Astro.props;
const { Content } = await movie.render();
---

<head>
  <meta charset="UTF-8" />
  <SEO
    title={`Scare Scale - ${movie.data.name} Review & Scare Ratings`}
    description={`${movie.data.name} (${movie.releaseYear}) â€” Rated for Gore (${movie.data.categoryRatings.gore}), Creepy Moments (${movie.data.categoryRatings.creepy}), Jumpscares (${movie.data.categoryRatings.jumpscares}), Suspense (${movie.data.categoryRatings.suspense}), and Psychological Horror (${movie.data.categoryRatings.psychological}). Discover how it ranks on the Scare Scale!`}
    canonical={`https://scarescale.com/movie/${movie.slug}`}
    openGraph={{
      basic: {
        type: "website",
        url: `https://scarescale.com/movie/${movie.slug}`,
        title: `Scare Scale - ${movie.data.name} Horror Movie Ratings`,
        image: movie.posterUrl,
      },
      optional: {
        description: `How scary is ${movie.data.name}? Find out how scary it is based on Gore, Creepy moments, Jumpscares, Suspense, and Psychological horror.`,
      },
    }}
  />
</head>

<MainLayout>
  <div class="flex flex-col items-center">
    <section class="flex flex-col gap-y-10 pt-6" id="movieDetails">
      <nav aria-label="Breadcrumb">
        <ol
          role="list"
          class="mx-auto flex max-w-2xl items-center space-x-2 px-4 sm:px-6 lg:max-w-7xl lg:px-8"
        >
          <li>
            <div class="flex items-center">
              <a
                href="/"
                class="mr-2 text-sm font-medium text-white hover:text-gray-300"
                >Movie</a
              >
              <svg
                width="16"
                height="20"
                viewBox="0 0 16 20"
                fill="currentColor"
                aria-hidden="true"
                class="h-5 w-4 text-white"
              >
                <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z"
                ></path>
              </svg>
            </div>
          </li>
          <li class="text-sm font-medium text-white">
            {movie.data.name}
          </li>
        </ol>
      </nav>

      <div
        class="place-items-center max-w-2xl px-6 grid grid-cols-1 lg:max-w-7xl lg:grid-cols-3 lg:gap-x-8 lg:px-8"
      >
        <Image
          src={movie.posterUrl}
          alt={`${movie.data.name} movie poster`}
          width={300}
          height={450}
          class="size-full size-2/3 rounded-lg object-cover"
        />

        <div
          class="py-10 lg:border-l lg:border-gray-200 lg:pt-6 lg:pl-8 lg:pb-16 lg:col-span-2"
        >
          <h1 class="text-2xl font-bold tracking-tight text-white sm:text-3xl">
            {movie.data.name}
          </h1>
          <h1 class="text-sm tracking-tight text-white">
            {`Release Date: ${movie.formattedDate}`}
          </h1>
          <div class="mt-5">
            <Prose>
              <Content />
            </Prose>
          </div>
          {movie.scareScaleRating > 0 ? (
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <h5 class="text-xl mt-5 font-medium text-white col-span-full">Ratings</h5>
              <ul role="list" class="divide-y divide-gray-100">
                {
                  movie.data.categoryRatings ? (
                    Object.entries(movie.data.categoryRatings).map(
                      ([categoryName, score]) => (
                        <li class="flex justify-between gap-x-6 py-5">
                          <div class="flex min-w-0 gap-x-4">
                            <img
                              class="w-6 h-6 flex-none"
                              src={`/icons/categories/${categoryName}.svg`}
                              alt=" "
                            />
                            <h1 class="text-sm/1 font-bold text-white">
                              {categoryName}
                            </h1>
                          </div>
                          <p class="text-sm/1 text-white">{score} / 10</p>
                        </li>
                      )
                    )
                  ) : (
                    <h5 class="text-l m-5 font-medium text-white">
                      Ratings not found
                    </h5>
                  )
                }
              </ul>

              <div
                class="w-full max-w-sm rounded-lg shadow-sm bg-white content-center outline-none ring-2 ring-black mx-auto lg:mx-0"
              >
                <div class="flex flex-col items-center p-4">
                  <img
                    src="/logo/logo_full.png"
                    alt="Scare Scale Logo"
                    class="h-14 w-auto"
                  />
                  <div
                    class="w-20 h-20 m-6 rounded-full shadow-lg border-2 border-[#d60c16] flex justify-center items-center"
                  >
                    <h5 class="text-xl font-medium text-[#d60c16]">
                      {round(movie.scareScaleRating)} / 10
                    </h5>
                  </div>
                  <h5 class="text-2xl text-black font-bold">{movie.scareScaleText}</h5>
                </div>
              </div>
            </div>
          ) : <></>}
        </div>
      </div>
    </section>
  </div>
</MainLayout>
