---
import MainLayout from "../layouts/MainLayout.astro";
import MoviesGrid, { Sort } from "../components/grids/MoviesGrid.astro";
import { SEO } from "astro-seo";
import { movies } from "../lib/movies";
---
<head>
  <meta charset="UTF-8" />
  <SEO
    title="Scare Scale Approved Horror Movies"
    description="Discover Scare Scale’s top tier recommended horror movies that are truly terrifying and will keep you on the edge of your seat."
    canonical="https://scarescale.com/recommended"
    openGraph={{
      basic: {
        type: "website",
        url: "https://scarescale.com/recommended",
        title: "Scare Scale - Approved Horror Movies",
        image: "https://scarescale.com/screenshots/home_page_screenshot.png",
      },
      optional: {
        description:
          "Discover Scare Scale’s top tier recommended horror movies that are truly terrifying and will keep you on the edge of your seat.",
      },
    }}
  />
</head>

<MainLayout>
  <section class="pt-10 pb-20">
    <header class="text-center px-6 lg:px-8 max-w-4xl mx-auto mb-20">
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Scare Scale
        <span class="block text-green-400">Approved<span class="text-4xl sm:text-5xl lg:text-6xl">✅</span></span>
      </h1>
      <p class="text-xl text-gray-300 leading-relaxed">
        Our top tier recommended horror movies that are truly terrifying and will keep you on the edge of your seat.
      </p>
      <div class="w-32 h-1 bg-gradient-to-r from-green-600 to-green-400 mx-auto mt-8 rounded-full"></div>
    </header>

    <div class="flex flex-col gap-y-8">
        <section class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
          <MoviesGrid
            sort={Sort.Random}
            movies={movies.getApproved()}
            scoreFilter={6}
          />
        </section>
    </div>
  </section>
</MainLayout>