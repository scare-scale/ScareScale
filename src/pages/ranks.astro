---
import MainLayout from "../layouts/MainLayout.astro";
import MoviesGrid, { Sort } from "../components/grids/MoviesGrid.astro";
import { SEO } from "astro-seo";
import { movies } from "../lib/movies";

const grids = [
  {
    title: "All-Time Scariest Movies",
    subtitle: "The most terrifying films ever made, ranked by fear factor.",
  },
  {
    title: "Scariest Movies of 2025",
    subtitle: "This year‚Äôs most scream-worthy releases.",
    props: { yearFilter: "2025" },
  },
  {
    title: "Highest Gore Rating",
    subtitle: "Movies with the most intense and graphic content.",
    props: { sort: Sort.Gore },
  },
  {
    title: "Highest Creepy Rating",
    subtitle: "Movies that will make your skin crawl.",
    props: { sort: Sort.Creepy },
  },
  {
    title: "Highest Jumpscares Rating",
    subtitle: "Movies with the most heart-stopping moments.",
    props: { sort: Sort.Jumpscares },
  },
  {
    title: "Highest Suspense Rating",
    subtitle: "Movies that keep you on the edge of your seat.",
    props: { sort: Sort.Suspense },
  },
  {
    title: "Highest Psychological Rating",
    subtitle: "Movies that mess with your mind.",
    props: { sort: Sort.Psychological },
  },
  {
    title: "Scariest Movies (2020‚Äì2025)",
    subtitle: "A half-decade of dread, distilled.",
    props: { yearFilter: ["2020", "2021", "2022", "2023", "2024", "2025"] },
  },
];
---

<head>
  <meta charset="UTF-8" />
  <SEO
    title="Scare Scale - Top Horror Movie Rankings"
    description="Explore the definitive rankings of the scariest horror movies based on Gore, Creepy moments, Jumpscares, Suspense, and Psychological intensity."
    canonical="https://scarescale.com/ranks"
    openGraph={{
      basic: {
        type: "website",
        url: "https://scarescale.com/ranks",
        title: "Scare Scale - Top Horror Movie Rankings | Fear Factor Breakdown",
        image: "https://scarescale.com/screenshots/home_page_screenshot.png",
      },
      optional: {
        description:
          "Find out which horror movies rank as the scariest. From blood-curdling gore to mind-bending psychological terror, discover the top films that will haunt you.",
      },
    }}
  />
</head>

<MainLayout>
  <section class="pt-10 pb-20">
    <header class="text-center px-6 lg:px-8 max-w-4xl mx-auto mb-20">
      <div class="inline-flex items-center gap-3 bg-red-600/20 border border-red-500/30 rounded-full px-6 py-2 mb-6">
        <span class="text-2xl">üèÜ</span>
        <span class="text-red-400 font-medium">Rankings</span>
      </div>
      <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
        Scare Scale
        <span class="block text-red-400">Rankings</span>
      </h1>
      <p class="text-xl text-gray-300 leading-relaxed">
        Discover the most fear-inducing horror films across years and genres‚Äî
        ranked by our signature Scare Scale algorithm.
      </p>
      <div class="w-32 h-1 bg-gradient-to-r from-red-600 to-red-400 mx-auto mt-8 rounded-full"></div>
    </header>

    <div class="flex flex-col gap-y-16">
      {grids.map((grid, index) => (
        <section class="mx-auto max-w-2xl px-6 lg:max-w-7xl lg:px-8">
          <header class="mb-8 text-center">
            <div class="inline-flex items-center gap-2 bg-gray-800/50 backdrop-blur-sm border border-gray-700/50 rounded-lg px-4 py-2 mb-4">
              <span class="text-red-400 font-bold text-lg">#{index + 1}</span>
            </div>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-3">
              {grid.title}
            </h2>
            {grid.subtitle && (
              <p class="text-lg text-gray-400 max-w-2xl mx-auto leading-relaxed">{grid.subtitle}</p>
            )}
          </header>
          <MoviesGrid
            sort={Sort.HighestToLowestScore}
            showRank={true}
            movies={movies.getOfficial()}
            maxCount={5}
            {...grid.props}
          />
        </section>
      ))}
    </div>
  </section>
</MainLayout>