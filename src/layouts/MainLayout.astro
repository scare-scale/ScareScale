---
import NavBar from "../components/nav/NavBar.astro";
import Footer from "../components/footer/Footer.astro";
import { Image } from "astro:assets";

const { backdropUrl } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="description" content="Scare Scale" />
    <title>Scare Scale</title>
  </head>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-8CCL693ZYM"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    if (window.location.hostname == "scarescale.com") {
      gtag('js', new Date());
      gtag('config', 'G-8CCL693ZYM');
      gtag('consent', 'default', {
        'ad_storage': 'denied',
        'analytics_storage': 'denied'
      });        
    }
  </script>
  <body
    class="overflow-hidden overflow-y-auto bg-body min-h-screen flex flex-col bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#570000] via-[#190A05] to-[#10131C]"
  >
    <!-- Background Image -->
    {backdropUrl && <div class="fixed inset-0 z-0">
      <Image
        src={backdropUrl}
        alt={`backdrop`}
        class="absolute inset-0 object-cover w-full h-full blur"
        height={854}
        width={480}
      />
      <!-- Black overlay -->
      <div class="absolute inset-0 bg-black/60 z-0"></div>
    </div>}
    <div class="w-screen flex-grow z-40">
      <NavBar />
      <slot />
    </div>
    <Footer />
  </body>
</html>
<style is:global>
  html,
  body {
    scroll-behavior: smooth;
    font-family: "Montserrat", sans-serif;
    height: 100%;
  }
</style>
