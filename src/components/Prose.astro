---
const { textColour = "white" } = Astro.props;
---

<div
  class=`prose prose-sm
  md:prose-base
  lg:prose-lg
  xl:prose-xl
  prose-headings:font-bold
  prose-headings:text-${textColour}
  prose-p:text-${textColour}
  prose-p:leading-relaxed
  prose-p:mb-4
  prose-strong:text-${textColour}
  prose-strong:font-semibold
  prose-a:text-red-400
  prose-a:hover:text-red-300
  prose-a:no-underline
  prose-a:transition-colors
  prose-blockquote:border-red-500
  prose-blockquote:text-${textColour}
  prose-img:rounded-xl
  prose-img:shadow-lg
  prose-img:max-h-96
  prose-code:bg-gray-800
  prose-code:text-red-400
  prose-code:px-2
  prose-code:py-1
  prose-code:rounded
  prose-pre:bg-gray-900
  prose-pre:border
  prose-pre:border-gray-700
  prose-ul:text-${textColour}
  prose-ol:text-${textColour}
  max-w-none
  `
>
  <slot />
</div>
