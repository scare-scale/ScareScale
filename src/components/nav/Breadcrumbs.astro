---
const { movie } = Astro.props;
---
<nav aria-label="Breadcrumb">
  <ol class="mx-auto flex max-w-2xl items-center space-x-2 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <li>
      <div class="flex items-center">
        <a href="/" class="mr-2 text-sm font-medium text-white hover:text-gray-300">Movie</a>
        <svg width="16" height="20" viewBox="0 0 16 20" fill="currentColor" class="h-5 w-4 text-white">
          <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z"></path>
        </svg>
      </div>
    </li>
    <li class="text-sm font-medium text-white">{movie.name}</li>
  </ol>
</nav>