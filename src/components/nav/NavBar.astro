---
import SearchBar from "./SearchBar.jsx";

const navLinks = {
  "Ranks": "/ranks",
  "Approved": "/approved",
  "Score Guide": "/score-guide",
  "Upcoming": "/upcoming",
};

const handleSignIn = () => {}
---

<div class="bg-gray-900/70 backdrop-blur-md border-b border-red-500/40 sticky top-0 z-50" id="navBar">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold hover:scale-105 transition-transform">
        <img
          src="/logo/logo_full_compressed.webp"
          alt="Scare Scale Logo"
          class="h-10 w-auto"
        />
      </a>

      <!-- Centered Navigation -->
      <nav class="hidden md:flex flex-grow justify-center space-x-8 font-semibold">
        {
          Object.entries(navLinks).map(([name, href]) => (
            <a href={href} class="text-white hover:text-red-400 transition-colors duration-200 relative group">
              {name}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-red-400 transition-all duration-200 group-hover:w-full"></span>
            </a>
          ))
        }
      </nav>

      <SearchBar client:load />

      <!-- Authentication -->
      <div class="hidden md:flex items-center space-x-4 ml-4">
        <div id="user-info" class="text-sm text-gray-300 hidden"></div>
        <a href="/auth" class="bg-gradient-to-r from-red-600 to-red-700 text-white px-4 py-2 rounded-lg hover:from-red-700 hover:to-red-800 text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-200">
          Sign In
        </a>
        <a href="/signout" class="bg-gradient-to-r from-gray-600 to-gray-700 text-white px-4 py-2 rounded-lg hover:from-gray-700 hover:to-gray-800 text-sm font-medium shadow-lg hover:shadow-xl transition-all duration-200 hidden">
          Sign Out
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button id="menuButton" class="md:hidden focus:outline-none ml-2 p-2 rounded-lg hover:bg-white/10 transition-colors">
        <svg
          class="w-6 h-6 text-white"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden md:hidden bg-black/90 backdrop-blur-md px-4 border-t border-red-600/30">
    <nav class="flex flex-col py-4 space-y-3">
      {
        Object.entries(navLinks).map(([name, href]) => (
          <a href={href} class="text-white hover:text-red-400 transition-colors py-2 px-3 rounded-lg hover:bg-white/10">
            {name}
          </a>
        ))
      }
    </nav>
  </div>
</div>

<script>
  const menuButton = document.getElementById("menuButton") as HTMLButtonElement;
  const mobileMenu = document.getElementById("mobileMenu");
  if (menuButton && mobileMenu) {
    menuButton.addEventListener("click", function () {
      mobileMenu.classList.toggle("hidden");
    });
  }
</script>
