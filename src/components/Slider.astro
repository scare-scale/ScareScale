---
export interface SliderProps {
  id: string;
  name: string;
  icon: string;
  value: number;
  min: number;
  max: number;
  onInput: (value: number) => void;
}

const { id, name, icon, value, min, max, onInput } = Astro.props;
---

<div class="group flex items-center gap-4">
  <div class="flex-1">
    <label for={`${id}Slider`} class="block font-medium mb-1 flex items-center gap-2">
      <img src={icon} alt={`${name} Icon`} class="w-4 h-4" />
      {name}
    </label>
    <div class="flex items-center gap-2">
      <span class="text-sm text-gray-400">{min}</span>
      <input
        type="range"
        id={`${id}Slider`}
        class="filter-slider w-full cursor-pointer group-hover:bg-gray-700 accent-[#d60c16]"
        min={min}
        max={max}
        value={value}
        onInput={(e) => onInput(parseInt(e.target.value))}
      />
      <span class="text-sm text-gray-400">{max}</span>
    </div>
    <div class="text-center text-sm text-gray-300 mt-1" id={`${id}Value`}>
      {value}
    </div>
  </div>
</div>
