---
import packageJson from "../../../package.json";

const githubUrl = "https://github.com/scare-scale/ScareScale";

const navLinks = {
  "Our Movie Ranks": "/ranks",
  "Approved Horror Movies": "/approved",
  "Upcoming Horror Movies": "/upcoming",
  "AI Reviews": "/ai-reviews",
  "Scoring Guide": "/score-guide",
};

const legalLinks = {
  "Terms & Conditions": "/legal",
  "Privacy Policy": "/legal",
  "Cookie Policy": "/legal",
};
---

<footer
  class="bg-black/95 backdrop-blur-xl text-white py-12 border-t border-red-600/40 mt-16"
>
  <div class="container mx-auto px-6 lg:px-12">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
      <div>
        <img
          src="/logo/logo.svg"
          alt="Scare Scale Logo"
          class="h-16 w-auto mb-4 rounded-lg p-2"
        />
        <p class="text-gray-400 text-sm leading-relaxed max-w-xs">
          Finding the scariest horror movies since 2025.
        </p>
        <p class="text-gray-500 text-xs mt-4">
          Version {packageJson.version}
        </p>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3 text-red-400">Explore</h4>
        <ul class="space-y-2">
          {
            Object.entries(navLinks).map(([label, url]) => (
              <li>
                <a
                  href={url}
                  class="text-gray-300 hover:text-white transition-colors duration-200 hover:underline"
                >
                  {label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3 text-red-400">Legal</h4>
        <ul class="space-y-2">
          {
            Object.entries(legalLinks).map(([label, url]) => (
              <li>
                <a
                  href={url}
                  class="text-gray-300 hover:text-white transition-colors duration-200 hover:underline"
                >
                  {label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h4 class="text-lg font-semibold mb-3 text-red-400">Community</h4>
        <a
          href={githubUrl}
          class="flex items-center space-x-3 text-gray-300 hover:text-white transition-colors duration-200 hover:underline transform"
          target="_blank"
          rel="noopener noreferrer"
        >
          <img src="/icons/github.svg" alt="GitHub Logo" class="h-6 w-6" />
          <span>GitHub</span>
        </a>

        <p class="text-gray-400 text-sm mt-4">
          Made by horror fans, for horror fans.
        </p>
      </div>
    </div>

    <div
      class="mt-10 pt-6 border-t border-white/10 text-center text-gray-500 text-sm"
    >
      &copy; {new Date().getFullYear()} Scare Scale. All rights reserved.
    </div>
  </div>
</footer>
