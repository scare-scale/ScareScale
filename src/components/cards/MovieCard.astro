---
const { name, tmdbPosterId, rank, scareScaleRating, tmdbId, slug ***REMOVED*** =
  Astro.props;
const posterUrl = `https://www.themoviedb.org/t/p/w300_and_h450_bestv2/${tmdbPosterId***REMOVED***.jpg`;
---

<a href=`/movie/${slug***REMOVED***` class="relative group">
  <img
    src={posterUrl***REMOVED***
    alt={`${name***REMOVED*** movie poster`***REMOVED***
    class="w-full rounded-lg bg-gray-200 object-cover group-hover:opacity-75"
  />
  {
    rank ? (
      <span class="absolute top-0 left-0 bg-red-500 text-white text-sm font-bold flex items-center justify-center w-12 h-12 clip-triangle">
        {rank***REMOVED***
      </span>
    ) : <></>
  ***REMOVED***
  <div
    class="absolute bottom-0 left-0 w-full bg-black bg-opacity-60 text-white text-center text-lg font-semibold py-2"
  >
    {scareScaleRating***REMOVED***/10
  </div>
</a>
