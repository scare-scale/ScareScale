---
import Prose from "../Prose.astro";

const { review } = Astro.props;
---

<div class="max-w-4xl mx-auto">
  <article class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition-all duration-300">
    <!-- Review Header -->
    <header class="bg-gradient-to-r from-gray-50 to-white px-6 py-5 border-b border-gray-200">
      <div class="flex items-start justify-between">
        <div class="flex items-start gap-4">
          <!-- Reviewer Avatar -->
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-red-500 to-red-600 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg">
              {review.type.charAt(0).toUpperCase()}
            </div>
          </div>

          <!-- Reviewer Info -->
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-1">
              <h3 class="text-lg font-bold text-gray-900">{review.type.charAt(0).toUpperCase() + review.type.slice(1)} Reviewer</h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                Verified
              </span>
            </div>
            <div class="flex items-center gap-4 text-sm text-gray-500">
              <span>Scare Scale Contributor</span>
              <span>â€¢</span>
              <span>2 days ago</span>
            </div>
          </div>
        </div>

        <!-- Overall Rating -->
        <div class="flex-shrink-0 text-right">
          <div class="text-3xl font-black text-red-600 mb-1">{review.overallRating}</div>
          <div class="text-sm text-gray-500">out of 10</div>
        </div>
      </div>
    </header>

    <!-- Category Breakdown -->
    <section class="px-6 py-6 bg-gray-50 border-b border-gray-200">
      <h4 class="text-sm font-semibold text-gray-700 uppercase tracking-wide mb-4">Category Breakdown</h4>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
        {
          Object.entries(review.categories).map(([categoryName, score]) => (
            <div class="bg-white rounded-lg p-3 border border-gray-200 hover:shadow-md transition-shadow">
              <div class="flex items-center justify-between mb-2">
                <div class="flex items-center gap-2">
                  <img
                    class="w-4 h-4"
                    src={`/icons/categories/${categoryName}.svg`}
                    alt={`${categoryName} icon`}
                  />
                  <span class="text-sm font-medium text-gray-700 capitalize">{categoryName}</span>
                </div>
                <span class="text-sm font-bold text-red-600">{score}/10</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2">
                <div class="bg-red-500 h-2 rounded-full transition-all duration-500" style={`width: ${Number(score) * 10}%`}></div>
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <!-- Review Content -->
    <section class="px-6 py-6" aria-label="Review Content">
      <div class="prose prose-lg max-w-none text-gray-700">
        {
          review.content?.trim() ? (
            <div class="text-gray-800 leading-relaxed">
              {review.content.split('\n').map((paragraph: string) =>
                paragraph.trim() ? <p class="mb-4">{paragraph}</p> : null
              )}
            </div>
          ) : (
            <div class="text-center py-8">
              <div class="text-gray-400 italic text-lg">
                This reviewer chose not to write a detailed review.
              </div>
              <div class="text-sm text-gray-500 mt-2">
                Rating based on category scores only.
              </div>
            </div>
          )
        }
      </div>
    </section>

    <!-- Review Actions -->
    <footer class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <button class="flex items-center gap-2 text-sm text-gray-600 hover:text-green-600 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"></path>
            </svg>
            Helpful (12)
          </button>
          <button class="flex items-center gap-2 text-sm text-gray-600 hover:text-red-600 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14H5.236a2 2 0 01-1.789-2.894l3.5-7A2 2 0 018.737 3h4.017c.163 0 .326.02.485.06L17 4m-7 10v5a2 2 0 002 2h.095c.5 0 .905-.405.905-.905 0-.714.211-1.412.608-2.006L17 13V4m-7 10h2m4-10h2"></path>
            </svg>
            Not Helpful (2)
          </button>
        </div>

        <div class="flex items-center gap-3">
          <button class="text-sm text-gray-600 hover:text-blue-600 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
            </svg>
          </button>
          <button class="text-sm text-gray-600 hover:text-gray-800 transition-colors">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h.01M5 12h.01M5 12h.01M12 12h.01M12 12h.01M12 12h.01M19 12h.01M19 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"></path>
            </svg>
          </button>
        </div>
      </div>
    </footer>
  </article>
</div>
