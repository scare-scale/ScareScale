---
import { Image } from "astro:assets";
import { movies } from "../../lib/movies";

const ratedMovies = movies.getApproved();

const movie =
  ratedMovies.length > 0
    ? ratedMovies[Math.floor(Math.random() * ratedMovies.length)]
    : null;

if (movie === null) {
  throw new Error("Featured movie not found.");
}

export const prerender = false;
---

<a
  href={`/movie/${movie.slug}`}
  class="group block relative overflow-hidden rounded-2xl shadow-2xl hover:shadow-red-500/30 transition-all duration-500 mt-4 sm:mt-6 lg:mt-8"
>
  <!-- Background Image -->
  <div class="relative h-[24rem] sm:h-[28rem] md:h-[32rem] lg:h-[36rem] overflow-hidden">
    <Image
      src={movie.backdropUrl || movie.posterUrl}
      alt={`${movie.name} movie backdrop`}
      width={1920}
      height={1080}
      class="w-full h-full object-cover object-center group-hover:scale-105 transition-transform duration-700"
      loading={"eager"}
    />

    <!-- Enhanced gradient overlays -->
    <div class="absolute inset-0 bg-gradient-to-t from-black/95 via-black/60 to-black/20"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/30 to-red-900/40"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-transparent via-transparent to-purple-900/20"></div>

    <!-- Content Overlay -->
    <div class="absolute inset-0 flex items-center">
      <div class="container mx-auto px-4 sm:px-6 lg:px-12">
        <div class="max-w-4xl">
          <div class="mb-4 sm:mb-6">
            <div
              class="inline-flex items-center gap-2 sm:gap-3 bg-gradient-to-r from-red-600/95 to-red-700/95 backdrop-blur-md border border-red-500/60 rounded-full px-2 sm:px-3 py-1.5 sm:py-2 text-xs sm:text-sm font-bold text-white shadow-lg"
            >
            <span class="inline-flex items-center justify-center w-4 h-4 sm:w-5 sm:h-5 bg-white rounded-full shadow-md">
              <img
                class="w-3 h-3 sm:w-4 sm:h-4"
                src={`/logo/logo_small.png`}
                alt={`Scare Scale icon`}
              />
            </span>
              <span>FEATURED MOVIE</span>
            </div>
          </div>

          <h2
            class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-black text-white mb-3 sm:mb-4 leading-tight tracking-tight max-w-full"
          >
            <span class="block">{movie.name}</span>
            <span
              class="block text-lg sm:text-xl md:text-2xl lg:text-3xl text-red-400 font-bold mt-1 sm:mt-2"
            >
              ({movie.releaseYear})
            </span>
          </h2>
          <span
          class="inline-flex items-center gap-1.5 sm:gap-2 bg-gradient-to-r from-red-600 to-red-700 text-white text-xs sm:text-sm px-2 sm:px-3 py-1 mb-3 sm:mb-4 rounded-full shadow-lg"
        >
          <img
            class="w-3 h-3 sm:w-4 sm:h-4"
            src={`/icons/official.svg`}
            alt={`Approved Icon`}
          />
          Scare Scale Approved
        </span>
          <div
            class="flex flex-wrap gap-2 sm:gap-3 mb-6 sm:mb-8 justify-center md:justify-start"
          >
            {
              movie.getTopCategories().map((categoryName) => (
                <span class="inline-flex items-center bg-gradient-to-r from-white/15 to-white/10 backdrop-blur-md border border-white/30 rounded-full px-3 sm:px-4 py-2 sm:py-2.5 text-xs sm:text-sm font-semibold text-white hover:from-white/25 hover:to-white/20 transition-all duration-300 hover:scale-105 shadow-lg">
                  <img
                    class="w-4 h-4 sm:w-5 sm:h-5 mr-2 sm:mr-2.5"
                    src={`/icons/categories/${categoryName}.svg`}
                    alt={`${categoryName} icon`}
                  />
                  {categoryName.charAt(0).toUpperCase() + categoryName.slice(1)}

                </span>
              ))
            }
          </div>

          <div class="flex justify-center">
            <div
              class="flex items-center gap-3 sm:gap-5 bg-black/60 backdrop-blur-md rounded-2xl px-4 sm:px-6 py-3 sm:py-4 border border-white/20 shadow-xl"
            >
              <div class="relative">
                <div
                  class="w-16 h-16 sm:w-20 sm:h-20 rounded-full border-3 sm:border-4 border-red-500 bg-black/80 flex justify-center items-center shadow-lg"
                >
                  <span class="text-lg sm:text-2xl font-black text-red-400">
                    {movie.getPriorityReview().overallRating}
                  </span>
                </div>
                <div
                  class="absolute -top-1 -right-1 w-5 h-5 sm:w-6 sm:h-6 bg-red-500 rounded-full flex items-center justify-center"
                >
                  <span class="text-xs font-bold text-white">â˜…</span>
                </div>
              </div>
              <div class="text-left">
                <div class="text-white font-bold text-lg sm:text-xl">Scare Rating</div>
                <div class="text-gray-300 text-xs sm:text-sm font-medium">out of 10</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</a>
