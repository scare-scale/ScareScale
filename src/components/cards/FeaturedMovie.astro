---
import { Image } from "astro:assets";
import { movies } from "../../lib/movies";

const ratedMovies = movies.getApproved();

const movie = ratedMovies.length > 0
  ? ratedMovies[Math.floor(Math.random() * ratedMovies.length)]
  : null;

if (movie === null) {
  throw new Error("Featured movie not found.");
}

export const prerender = false;
---
<a href={`/movie/${movie.slug}`} class="group block">
    <div class="grid grid-cols-2 max-w-full bg-white border-none rounded-t-lg overflow-hidden text-left mt-8 lg:mt-8">
      <div>
        <Image
          src={movie.posterUrl}
          alt={`${movie.name} movie poster`}
          width={300}
          height={450}
          class="w-full h-auto object-cover"
          loading={"eager"}
        />
      </div>
      <div class="p-4 flex flex-col justify-between leading-normal">
        <div>
          <p class="text-xs md:text-md lg:text-lg text-gray-600 flex items-center">Featured</p>
          <div class="text-gray-900 font-bold text-sm md:text-lg lg:text-xl mb-2">
            {movie.name} ({movie.releaseYear})
          </div>
          {movie.getTopCategories()
            .map((categoryName) => (
              <span
                class="inline-flex items-center bg-gray-200 rounded-full px-3 py-1 text-xs md:text-md lg:text-lg font-semibold text-gray-700 mr-2 mb-1"
              >
                <img
                  class="w-5 h-5 mr-2"
                  src={`/icons/categories/${categoryName}.svg`}
                  alt={`${categoryName} icon`}
                />
                {categoryName.charAt(0).toUpperCase() + categoryName.slice(1)}
              </span>
            ))}
        </div>
        <div class="flex items-center justify-center h-full shrink">
          <div class="w-20 h-20 rounded-full shadow-lg border-2 border-[#d60c16] flex justify-center items-center">
            <h5 class="text-xl font-bold text-[#d60c16]">
              {movie.getPriorityReview().overallRating} / 10
            </h5>
          </div>
        </div>
      </div>
    </div>
  
    <div class="w-full bg-[#d60c16]/80 text-white text-center py-2 rounded-b-lg">
      <div class="flex items-center justify-center space-x-2">
        <img
          src="logo/logo_wide.png"
          alt="Scare Scale logo"
          class="h-4 mt-0.5"
        />
        <span class="text-lg text-black font-bold">Approved</span>
      </div>
    </div>
  </a>