---
const { review } = Astro.props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
  <div class="space-y-4">
    <h5 class="text-2xl font-bold text-white flex items-center gap-3">
      <span class="text-red-400">üìä</span>
      Ratings
      <span class="inline-flex items-center gap-2 bg-gradient-to-r from-red-600 to-red-700 text-white text-sm px-3 py-1 rounded-full shadow-lg">
        <img
          class="w-4 h-4"
          src={`/icons/${review.type}.svg`}
          alt={`AI Generated Icon`}
        />
        {review.type.charAt(0).toUpperCase() + review.type.slice(1)} Review
      </span>
    </h5>
    <ul role="list" class="space-y-3">
      {
        Object.entries(review.categories).map(
          ([categoryName, score]) => (
            <li class="flex justify-between items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-700/50 hover:bg-gray-800/70 transition-colors">
              <div class="flex items-center gap-x-3">
                <img
                  class="w-6 h-6 flex-none"
                  src={`/icons/categories/${categoryName}.svg`}
                />
                <h1 class="text-base font-semibold text-white">{categoryName.charAt(0).toUpperCase() + categoryName.slice(1)}</h1>
              </div>
              <div class="flex items-center gap-2">
                <div class="w-16 h-2 bg-gray-700 rounded-full overflow-hidden">
                  <div class="h-full bg-gradient-to-r from-red-600 to-red-500 rounded-full" style={`width: ${Number(score) * 10}%`}></div>
                </div>
                <p class="text-base font-bold text-red-400 min-w-[3rem] text-right">{score} / 10</p>
              </div>
            </li>
          )
        )
      }
    </ul>
  </div>
  <div class="w-full max-w-sm mx-auto lg:mx-0">
    <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-xl shadow-2xl border border-gray-700/50 overflow-hidden">
      <div class="flex flex-col items-center p-6">
        <img
          src="/logo/logo_full.png"
          alt="Scare Scale Logo"
          class="h-16 w-auto mb-4"
        />
        <div class="w-24 h-24 rounded-full shadow-xl border-4 border-red-600 bg-gray-900 flex justify-center items-center mb-4">
          <h5 class="text-2xl font-bold text-red-400">
            {review.overallRating} / 10
          </h5>
        </div>
        <h5 class="text-xl text-white font-bold text-center mb-4">
          {review.scoreText}
        </h5>
        <a
          href="/score-guide"
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-105"
          aria-label="View Score Guide"
        >
          <span>‚ùì</span>
          How is this calculated?
        </a>
      </div>
    </div>
  </div>
</div>
