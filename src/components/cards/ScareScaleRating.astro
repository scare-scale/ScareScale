---
const { movie } = Astro.props;

const isApproved = movie.isApproved()

const review = movie.getSummaryReview();
---
<div class="space-y-4">
  <h5 class="text-2xl font-bold text-white flex items-center gap-3">
    <span class="text-red-400">ðŸ“Š</span>
    Ratings
    <a
    href="/score-guide"
    class="inline-flex items-center gap-2 px-2 py-1.5 text-sm font-medium text-white bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 hover:scale-105"
    aria-label="View Score Guide"
  >
    How is this calculated?
  </a>
  </h5>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 w-full">
    <ul role="list" class="space-y-3 col-span-1">
      {
        Object.entries(review.categories).map(([categoryName, score]) => (
          <li class="flex justify-between items-center p-4 bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-700/50 hover:bg-gray-800/70 transition-colors">
            <div class="flex items-center gap-x-3">
              <img
                class="w-6 h-6 flex-none"
                src={`/icons/categories/${categoryName}.svg`}
              />
              <h1 class="text-base font-semibold text-white">
                {categoryName.charAt(0).toUpperCase() + categoryName.slice(1)}
              </h1>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-16 h-2 bg-gray-700 rounded-full overflow-hidden">
                <div
                  class="h-full bg-gradient-to-r from-red-600 to-red-500 rounded-full"
                  style={`width: ${Number(score) * 10}%`}
                />
              </div>
              <p class="text-base font-bold text-red-400 min-w-[3rem] text-right">
                {score} / 10
              </p>
            </div>
          </li>
        ))
      }
    </ul>
    <div class="w-full h-full mx-auto lg:mx-0 col-span-1">
      <div
        class="h-full bg-gray-800/50 backdrop-blur-sm rounded-lg border border-gray-700/50 hover:bg-gray-800/70 transition-colors overflow-hidden"
      >
        <div class="flex flex-col items-center justify-center p-6 h-full">
          <img
            src="/logo/logo_full.png"
            alt="Scare Scale Logo"
            class="h-16 w-auto mb-4 bg-white/90 rounded-lg p-2 hover:bg-white transition-colors"
          />
          <div
            class="w-24 h-24 rounded-full shadow-xl border-4 border-red-600 bg-gray-800/50 backdrop-blur-sm  flex justify-center items-center mb-4"
          >
            <h5 class="text-2xl font-bold text-red-400">
              {review.overallRating} / 10
            </h5>
          </div>
          <h5 class="text-xl text-white font-bold text-center mb-4">
            {review.scoreText}
          </h5>
          {isApproved &&
            <span
              class="inline-flex items-center gap-2 bg-gradient-to-r from-red-600 to-red-700 text-white text-sm px-3 py-1 rounded-full shadow-lg"
            >
              <img
                class="w-4 h-4"
                src={`/icons/official.svg`}
                alt={`Approved Icon`}
              />
              Scare Scale Approved
            </span>}
        </div>
      </div>
    </div>
  </div>
</div>
