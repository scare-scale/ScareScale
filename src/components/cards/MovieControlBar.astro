---
const { movie } = Astro.props;
const controlBarItems = [
  { name: "Trailers", href: movie.trailersUrl, icon: "/icons/trailers.svg" },
  { name: "Reviews", href: movie.reviewsUrl, icon: "/icons/reviews.svg" },
  {
    name: "Where to Watch",
    href: movie.whereToWatchUrl,
    icon: "/icons/watch.svg",
  },
  { name: "Add Review", href:`/movie/${movie.slug}/review`  , icon: "/icons/edit.svg" },
];
---
<div class="max-w-screen-sm px-6 py-4 bg-gray-800/80 backdrop-blur-md shadow-xl rounded-xl m-6 mx-auto border border-gray-700/50">
  <ul class="flex flex-row justify-center items-center gap-3 md:gap-6 lg:gap-8 text-white">
    {
      controlBarItems.map((item) => (
        <li class="flex items-center p-2 text-sm gap-x-2 text-white">
          <a
            href={item.href}
            class="flex items-center gap-2 font-semibold hover:text-red-400 transition-colors duration-200 hover:scale-105 transform px-3 py-2 rounded-lg hover:bg-white/10"
          >
            <img
              src={item.icon}
              alt={`${item.name} Icon`}
              class="w-5 h-5"
            />
            <span class="hidden sm:inline">{item.name}</span>
            <span class="sm:hidden">{item.name.split(' ')[0]}</span>
          </a>
        </li>
      ))
    }
  </ul>
</div>